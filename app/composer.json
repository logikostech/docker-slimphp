{
  "name": "logikos/slimphp-boilerplate",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Todd Empcke",
      "email": "tempcke@logikostech.net"
    }
  ],
  "require": {
    "php": "^7.0",
    "slim/slim": "^3.9"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.5",
    "phpstan/phpstan": "^0.8.5"
  },
  "autoload": {
    "psr-4": {
      "Logikos\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "LogikosTest\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "phpstan": "vendor/bin/phpstan analyse src --level=7"
  }
}
